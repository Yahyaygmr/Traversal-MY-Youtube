@model Guide

@{
    ViewData["Title"] = "EditGuide";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rehber Güncelle</h1>
<hr />
<div class="container">
    <form method="post">
        <input asp-for="GuideId" hidden/>
        <div class="form-group">
            <label>Ad Soyad</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div class="form-group mt-2">
            <label>Açıklama</label>
            <input type="text" asp-for="Description" class="form-control" />
        </div>
        <div class="form-group mt-2">
            <label>Resim Url</label>
            <input type="text" asp-for="Image" class="form-control" />
        </div>
        <div class="form-group mt-2">
            <label>Twitter Url</label>
            <input type="text" asp-for="TwitterUrl" class="form-control" />
        </div>
        <div class="form-group mt-2">
            <label>İnastagram Url</label>
            <input type="text" asp-for="InstagramUrl" class="form-control" />
        </div>
        <div class="form-group mt-2">
            <label>Durumu</label>
            <input type="text" asp-for="Status" class="form-control" />
        </div>
        <div class="form-group my-4">
            <button class="btn btn-success">Güncelle</button>
        </div>
    </form>
</div>

