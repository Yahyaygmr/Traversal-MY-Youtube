@model Guide

@{
    ViewData["Title"] = "CreateGuide";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Rehber Ekle</h1>
<hr />
<div class="container">
    <form method="post">
        <div class="form-group">
            <label>Ad Soyad</label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <label>Açıklama</label>
            <input type="text" asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <label>Resim Url</label>
            <input type="text" asp-for="Image" class="form-control" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <label>Twitter Url</label>
            <input type="text" asp-for="TwitterUrl" class="form-control" />
            <span asp-validation-for="TwitterUrl" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <label>İnastagram Url</label>
            <input type="text" asp-for="InstagramUrl" class="form-control" />
            <span asp-validation-for="InstagramUrl" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <label>Durumu</label>
            <input type="text" asp-for="Status" class="form-control" />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div class="form-group my-4">
            <button class="btn btn-success">Kaydet</button>
        </div>
    </form>
</div>

