@model Destination

@{
    ViewData["Title"] = "AddDestination";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Rota Oluştur</h1>
<hr />
<div class="container">
    <form method="post">
        <div class="form-group">
            <label>Şehir</label>
            <input type="text" asp-for="City" class="form-control" />
        </div>
        <div class="form-group mt-2">
            <label>Gün Gece</label>
            <input type="text" asp-for="DayNight" class="form-control" />
        </div>
        <div class="form-group mt-2">
            <label>Fiyat</label>
            <input type="text" asp-for="Price" class="form-control" />
        </div>
        <div class="form-group mt-2">
            <label>Ana Görsel</label>
            <input type="text" asp-for="Image" class="form-control" />
        </div>
        <div class="form-group mt-2">
            <label>Kapasite</label>
            <input type="text" asp-for="Capacity" class="form-control" />
        </div>
        <div class="form-group mt-2">
            <label>Kapak Görseli</label>
            <input type="text" asp-for="CoverImage" class="form-control" />
        </div>
        <div class="form-group mt-2">
            <label> Görsel2</label>
            <input type="text" asp-for="Image2" class="form-control" />
        </div>
        <div class="form-group mt-2">
            <label> Açıklama</label>
            <input type="text" asp-for="Description" class="form-control" />
        </div>
        <div class="form-group mt-2">
            <label>Detay 1</label>
           <textarea cols="30" rows="5" asp-for="Details1" class="form-control"></textarea>
        </div>
        <div class="form-group mt-2">
            <label>Detay 2</label>
            <textarea cols="30" rows="5" asp-for="Details2" class="form-control"></textarea>
        </div>
        <div class="form-group my-4">
            <button class="btn btn-success">Kaydet</button>
        </div>
    </form>
</div>
