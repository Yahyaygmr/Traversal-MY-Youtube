@model Destination
@{
    ViewData["Title"] = "Rota Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-xxl">
    <div class="card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">Rota Güncelle</h5>
        </div>
        <div class="card-body">
            <div class="container">
                <form method="post">
                    <input type="text" asp-for="DestinationId" hidden />
                    <div class="form-group">
                        <label>Rehber</label>
                        @Html.DropDownListFor(x => x.GuideId, (List<SelectListItem>)ViewBag.guides, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Şehir</label>
                        <input type="text" asp-for="City" class="form-control" />
                    </div>
                    <div class="form-group mt-2">
                        <label>Gün Gece</label>
                        <input type="text" asp-for="DayNight" class="form-control" />
                    </div>
                    <div class="form-group mt-2">
                        <label>Fiyat</label>
                        <input type="text" asp-for="Price" class="form-control" />
                    </div>
                    <div class="form-group mt-2">
                        <label>Ana Görsel</label>
                        <input type="text" asp-for="Image" class="form-control" />
                    </div>
                    <div class="form-group mt-2">
                        <label>Kapasite</label>
                        <input type="text" asp-for="Capacity" class="form-control" />
                    </div>
                    <div class="form-group mt-2">
                        <label>Kapak Görseli</label>
                        <input type="text" asp-for="CoverImage" class="form-control" />
                    </div>
                    <div class="form-group mt-2">
                        <label> Görsel2</label>
                        <input type="text" asp-for="Image2" class="form-control" />
                    </div>
                    <div class="form-group mt-2">
                        <label> Açıklama</label>
                        <input type="text" asp-for="Description" class="form-control" />
                    </div>
                    <div class="form-group mt-2">
                        <label>Detay 1</label>
                        <textarea cols="30" rows="5" asp-for="Details1" class="form-control"></textarea>
                    </div>
                    <div class="form-group mt-2">
                        <label>Detay 2</label>
                        <textarea cols="30" rows="5" asp-for="Details2" class="form-control"></textarea>
                    </div>
                    <div class="form-group my-4">
                        <button class="btn btn-success">Güncelle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


