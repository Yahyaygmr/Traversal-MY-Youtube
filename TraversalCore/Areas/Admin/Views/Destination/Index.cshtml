@model List<Destination>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Tur Rotaları</h1>
<hr />
<div class="container">

    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Şehir</th>
                <th>Fiyat</th>
                <th>Kapasite</th>
                <th>Sitede Gör</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DestinationId</td>
                    <td>@item.City</td>
                    <td>@item.Price.ToString("c")</td>
                    <td>@item.Capacity</td>
                    <td><a href="/Destination/DestinationDetails/@item.DestinationId" class="btn btn-primary btn-sm">Sitede Gör</a></td>
                    <td><a href="/Admin/Destination/DeleteDestination/@item.DestinationId" class="btn btn-danger btn-sm">Sil</a></td>
                    <td><a href="/Admin/Destination/UpdateDestination/@item.DestinationId" class="btn btn-warning btn-sm">Güncelle</a></td>
                </tr>
            }
           
        </tbody>
    </table>
    <div class="my-4">
        <a href="/Admin/Destination/AddDestination/" class="btn btn-outline-primary">Yeni Tur Rotası Oluştur</a>
    </div>
 

</div>

