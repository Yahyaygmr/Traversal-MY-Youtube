@model List<Destination>

@{
    ViewData["Title"] = "Tur Rotaları";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}



<div class="col-xxl">
    <div class="card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">Tur Rotaları</h5>
        </div>
        <div class="card-body">
            <div class="container">

                <table class="table table-hover" id="tableSearch">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Şehir</th>
                            <th>Fiyat</th>
                            <th>Kapasite</th>
                            <th>Sitede Gör</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.City</td>
                                <td>₺ @item.Price</td>
                                <td>@item.Capacity</td>
                                <td><a href="/Destination/DestinationDetails/@item.DestinationId" class="btn btn-primary btn-sm" target="_blank">Sitede Gör</a></td>
                                <td><a href="/Admin/Destination/DeleteDestination/@item.DestinationId" class="btn btn-danger btn-sm">Sil</a></td>
                                <td><a href="/Admin/Destination/UpdateDestination/@item.DestinationId" class="btn btn-warning btn-sm">Güncelle</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
                <div class="my-4">
                    <a href="/Admin/Destination/AddDestination/" class="btn btn-outline-primary">Yeni Tur Rotası Oluştur</a>
                </div>


            </div>
        </div>
    </div>
</div>
