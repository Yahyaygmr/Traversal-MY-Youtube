@model List<Destination>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Tur Rotaları</h1>
<hr />
<div class="container">

    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Şehir</th>
                <th>Fiyat</th>
                <th>Kapasite</th>
                <th>Sitede Gör</th>
                <th>Sil</th>
                <th>Güncelle</th>
                <th>Detaylar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DestinationId</td>
                    <td>@item.City</td>
                    <td>@item.Price.ToString("c")</td>
                    <td>@item.Capacity</td>
                    <td><a href="#" class="btn btn-primary btn-sm">Sitede Gör</a></td>
                    <td><a href="#" class="btn btn-danger btn-sm">Sil</a></td>
                    <td><a href="#" class="btn btn-warning btn-sm">Güncelle</a></td>
                    <td><a href="#" class="btn btn-info btn-sm">Detay</a></td>
                </tr>
            }
           
        </tbody>
       
    </table>

</div>

