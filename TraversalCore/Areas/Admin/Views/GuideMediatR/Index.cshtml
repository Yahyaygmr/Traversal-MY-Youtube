@model List<GetAllGuideQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>MediatR Rehber Listesi</h1>
<hr />
<div class="container">
    <table class="table table-hover table-striped">
        <tr>
            <td>#</td>
            <td>Rehber Adı</td>
            <td>Açıklama</td>
            <td>Güncelle</td>
            <td>Sil</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.GuideId</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td><a href="/Admin/GuideMediatR/GetGuides/@item.GuideId" class="btn btn-sm btn-danger">Sil</a></td>
                <td><a href="/Admin/GuideMediatR/GetGuides/@item.GuideId" class="btn btn-sm btn-info">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Admin/GuideMediatR/AddGuide" class="btn btn-primary">+ Yeni Rehber Ekle</a>
</div>
