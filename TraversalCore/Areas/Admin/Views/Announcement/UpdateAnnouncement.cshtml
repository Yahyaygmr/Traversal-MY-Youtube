@model AnnouncementUpdateDto
@{
    ViewData["Title"] = "Duyuru Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-xxl">
    <div class="card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h5 class="mb-0">Duyuru Güncelle</h5>
        </div>
        <div class="card-body">

            <div class="container">
                <form method="post">
                    <input asp-for="AnnouncementId" hidden />
                    <div class="form-group mb-3">
                        <label>Duyuru Başlığı</label>
                        <input type="text" asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label>Duyuru İçeriği</label>
                        <input type="text" asp-for="Content" class="form-control" />
                        <span asp-validation-for="Content"></span>
                    </div>
                    <div class="form-group mb-3">
                        <button class="btn btn-outline-primary">Duyuru Güncelle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

