@model List<AnnouncementListDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Duyuru Listesi</h1>
<hr />
<div class="container">
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>İçerik</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detay</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AnnouncementId</td>
                <td>@item.Title</td>
                <td>@item.Content</td>
                <td><a href="/Admin/Announcement/DeleteAnnouncement/@item.AnnouncementId" class="btn btn-outline-danger btn-sm">Sil</a></td>
                <td><a href="/Admin/Announcement/UpdateAnnouncement/@item.AnnouncementId" class="btn btn-outline-warning btn-sm">Güncelle</a></td>
                <td><a href="#" class="btn btn-outline-dark btn-sm">Detay</a></td>
            </tr>
        }
    </table>
    <a href="/Admin/Announcement/AddAnnouncement" class="btn btn-info">+ Duyuru Oluştur</a>
</div>
