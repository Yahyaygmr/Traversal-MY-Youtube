@model AnnouncementAddDto
@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Duyuru Oluştur</h1>
<hr />
<div class="container">
    <form method="post">
        <div class="form-group mb-3">
            <label>Duyuru Başlığı</label>
            <input type="text" asp-for="Title" class="form-control"/>
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group mb-3">
            <label>Duyuru İçeriği</label>
            <input type="text" asp-for="Content" class="form-control" />
            <span asp-validation-for="Content"></span>
        </div>
        <div class="form-group mb-3">
            <button class="btn btn-outline-primary">Duyuru Oluştur</button>
        </div>
    </form>
</div>

