@model List<ApiMovieViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Api IMDB Top 100 Film Listesi</h1>
<hr />
<div class="container">
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Resim</th>
            <th>Film Adı</th>
            <th>Imdb Puanı</th>
            <th>Yapım Yılı</th>
            <th>Fragman</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.rank</td>
                <td><img src="@item.image" style="width:50px; object-fit:cover; border-radius:10%;"/></td>
                <td>@item.title</td>
                <td>@item.rating</td>
                <td>@item.year</td>
                <td><a href="@item.imdb_link" target="_blank">IMDB de Gör</a> </td>
            </tr>
        }
    </table>
</div>
