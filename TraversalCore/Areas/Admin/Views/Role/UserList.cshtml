@model List<AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<h1>Kullanıcı Listesi</h1>
<hr />
<div class="container">
    @if (Model.Count > 0)
    {

        <table class="table table-hover">

            <tr>
                <th>#</th>
                <th>Kullanıcı Adı</th>
                <th>Rol Ata</th>
            </tr>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@item.UserName</td>
                    <td><a href="/Admin/Role/AssignRole/@item.Id" class="btn btn-sm btn-info">Rol Ata</a></td>
                </tr>

            }
        </table>


    }
    else
    {
        <div class="alert alert-warning">Şuanda gösterilecek bir Kullanıcı yok.</div>
    }
  @*   <a href="/Admin/Role/CreateRole/" class="btn btn-primary">+ Yeni Kullanıcı Oluştur</a> *@

</div>
