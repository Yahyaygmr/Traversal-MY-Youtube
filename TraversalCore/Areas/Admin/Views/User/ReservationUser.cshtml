@model List<Reservation>

@{
    ViewData["Title"] = "ReservationUser";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1><span class="text-warning">@ViewBag.User</span> Geçmiş Rezervasyonları</h1>
<hr />
<div class="container">
    @if (Model.Count < 1)
    {
        <h5 class="alert alert-warning">Şuanda gösterilecek bir rezervasyon yok...</h5>
    }
    else
    {
        <table class="table table-hover">
            <tr>
                <th>#</th>
                <th>Lokasyon</th>
                <th>Kişi Sayısı</th>
                <th>Rezervasyon Tarihi</th>
                <th>Durum</th>
                <th>Detaylar</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ReservationId</td>
                    <td>@item.Destination.City</td>
                    <td>@item.PersonCount</td>
                    <td>@item.ReservationDate.ToString("dd MMMM yyyy HH:mm")</td>
                    <td>@item.Status</td>
                    <td><a href="#" class="btn btn-sm btn-secondary">Detay</a></td>
                </tr>
            }
        </table>
    }

</div>
