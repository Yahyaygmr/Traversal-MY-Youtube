@model ContactUs
@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<!-- about breadcrumb -->
<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">İletişim</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="/Default/Index/">Anasayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> İletişim </li>
            </ul>
        </div>
    </div>
</section>
<!-- //about breadcrumb -->
<!-- contact-form -->
<section class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row">
                <div class="col-lg-6 contact-left">
                    <div class="partners">
                        <div class="cont-details">
                            <h5>Bize Ulaşın</h5>
                            <p class="mt-3 mb-4">
                               Merhaba, bize telefon, mail ya da mesaj yoluyla 7/24 ulaşabilir, hizmetlerimiz hakkında bilgi alabilirsiniz.
                            </p>
                        </div>
                        <div class="hours">
                            <h6 class="mt-4">Mail :</h6>
                            <p>
                                <a href="mailto:mail@traversal.com">
                                    mail@traversal.com
                                </a>
                            </p>
                            <h6 class="mt-4">Adres :</h6>
                            <p> İncili sokak no:29 Kadıköy/İSTANBUL</p>
                            <h6 class="mt-4">Telefon :</h6>
                            <p class="margin-top"><a href="tel:+44-255-366-88">+44-255-366-88</a></p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mt-lg-0 mt-5 contact-right">
                    <form  method="post" class="signin-form">
                        <div class="input-grids">
                            <div class="form-group">
                                <input type="text" name="NameSurname" id="w3lName" placeholder="Adınız Soyadınız*" class="contact-input" required="" />
                            </div>
                            <div class="form-group">
                                <input type="email" name="Mail" id="w3lSender" placeholder="Mail Adresiniz*" class="contact-input" required="" />
                            </div>
                            <div class="form-group">
                                <input type="text" name="Subject" id="w3lSubect" placeholder="Konu*" class="contact-input" required="" />
                            </div>
                        </div>
                        <div class="form-group">
                            <textarea name="MessageBody" id="MessageBody" placeholder="Mesajınızı yazın...*" required=""></textarea>
                        </div>
                        <div class="text-right">
                            <button class="btn btn-style btn-primary">Mesaj Gönder</button>
                        </div>
                    </form>
                </div>

            </div>
            <div class="map mt-5 pt-md-5">
                <h5>Harita</h5>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d48204.14451605069!2d28.97835858698791!3d41.00823721403169!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cac6301d587007%3A0xf47e3f1c7b9b3961!2sIstanbul%2C%20Turkey!5e0!3m2!1sen!2sus!4v1645470373374"
                        width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>

            </div>
        </div>
    </div>
</section>
<!-- /contact-form -->
